        assign tw_url = twitter_link | default: settings.socialTwitter
        assign tt_url = tiktok_link | default: settings.socialTiktok
        assign yt_url = youtube_link | default: settings.socialYoutube
        assign li_url = linkedin_link | default: settings.socialLinkedIn
