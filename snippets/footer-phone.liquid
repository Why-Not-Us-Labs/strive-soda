{% comment %}
  Footer Phone Widget - Social Media Hub
  Inspired by JuneShine's iPhone widget design

  Accepts:
  - image_1, image_2, image_3: image objects for slideshow
  - autoplay_speed: slideshow speed in ms (default 6000)
  - product_image: optional product image
{% endcomment %}

<div class="site-footer__phone">
  <!-- iPhone Frame Overlay -->
  <img
    class="site-footer__phone-overlay"
    src="{{ 'footer-phone.svg' | asset_url }}"
    alt="Phone Frame"
    width="360"
    height="728"
    loading="lazy"
  >

  <!-- Background Image Slideshow -->
  <div class="site-footer__phone-background">
    <div class="phone-slideshow" data-autoplay-speed="{{ autoplay_speed | default: 6000 }}">
      <div class="phone-slideshow__wrapper">
        {%- liquid
          assign has_images = false
          if image_1 != blank or image_2 != blank or image_3 != blank
            assign has_images = true
          endif
        -%}

        {% if has_images %}
          {% if image_1 != blank %}
            <div class="phone-slideshow__slide">
              <div class="site-footer__phone-background-image">
                <img
                  srcset="{{ image_1 | image_url: width: 328 }} 1x, {{ image_1 | image_url: width: 656 }} 2x"
                  src="{{ image_1 | image_url: width: 328 }}"
                  alt="Strive Lifestyle"
                  width="328"
                  height="705"
                  loading="lazy"
                >
              </div>
            </div>
          {% endif %}
          {% if image_2 != blank %}
            <div class="phone-slideshow__slide">
              <div class="site-footer__phone-background-image">
                <img
                  srcset="{{ image_2 | image_url: width: 328 }} 1x, {{ image_2 | image_url: width: 656 }} 2x"
                  src="{{ image_2 | image_url: width: 328 }}"
                  alt="Strive Lifestyle"
                  width="328"
                  height="705"
                  loading="lazy"
                >
              </div>
            </div>
          {% endif %}
          {% if image_3 != blank %}
            <div class="phone-slideshow__slide">
              <div class="site-footer__phone-background-image">
                <img
                  srcset="{{ image_3 | image_url: width: 328 }} 1x, {{ image_3 | image_url: width: 656 }} 2x"
                  src="{{ image_3 | image_url: width: 328 }}"
                  alt="Strive Lifestyle"
                  width="328"
                  height="705"
                  loading="lazy"
                >
              </div>
            </div>
          {% endif %}
        {% else %}
          <!-- Placeholder if no images set -->
          <div class="phone-slideshow__slide">
            <div class="site-footer__phone-background-image" style="background: linear-gradient(135deg, #0ABAB5 0%, #FF7A00 100%); height: 705px;"></div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>

  <!-- Phone Content: Social Icons + Brand Message -->
  <div class="site-footer__phone-content">
    <!-- Social Media Icons as "Apps" -->
