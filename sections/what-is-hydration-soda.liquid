{{ 'what-is-hydration-soda.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign heading = section.settings.heading
  assign description = section.settings.description
  assign cta_text = section.settings.cta_text
  assign cta_link = section.settings.cta_link
  assign bg_color = section.settings.bg_color
  assign text_color = section.settings.text_color
-%}

<section class="what-is-hydration-soda" style="background-color: {{ bg_color }}; color: {{ text_color }};">
  <div class="container">
    <div class="wihs-content">

      {%- if heading != blank -%}
        <h2 class="wihs-heading">{{ heading }}</h2>
      {%- endif -%}

      {%- if description != blank -%}
        <div class="wihs-description">
          {{ description }}
        </div>
      {%- endif -%}

      {%- if section.blocks.size > 0 -%}
        <div class="wihs-benefits">
          {%- for block in section.blocks -%}
            <div class="wihs-benefit-card" {{ block.shopify_attributes }}>
              {%- if block.settings.icon != blank -%}
                <div class="wihs-benefit-icon">
                  {{ block.settings.icon }}
                </div>
              {%- endif -%}

              {%- if block.settings.title != blank -%}
                <h3 class="wihs-benefit-title">{{ block.settings.title }}</h3>
              {%- endif -%}

              {%- if block.settings.description != blank -%}
                <p class="wihs-benefit-description">{{ block.settings.description }}</p>
              {%- endif -%}
            </div>
          {%- endfor -%}
        </div>
      {%- endif -%}

      {%- if cta_text != blank and cta_link != blank -%}
        <div class="wihs-cta">
          <a href="{{ cta_link }}" class="wihs-cta-button">
            {{ cta_text }}
          </a>
        </div>
      {%- endif -%}

    </div>
  </div>
</section>

