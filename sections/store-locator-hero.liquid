<section class="store-locator-hero">
  <div class="store-locator-hero__container">
    <h1 class="store-locator-hero__heading" style="font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif !important;">{{ section.settings.heading | default: 'Find Strive Near You' }}</h1>
    <p class="store-locator-hero__subheading" style="font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif !important;">{{ section.settings.subheading | default: 'Discover where to buy Strive Soda at stores near you.' }}</p>
  </div>
</section>

<style>
  .store-locator-hero {
    background: linear-gradient(135deg, #0ABAB5 0%, #089490 100%);
    padding: clamp(80px, 12vw, 140px) clamp(20px, 4vw, 60px);
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  /* Subtle pattern overlay */
  .store-locator-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 20% 80%, rgba(255,255,255,0.1) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(255,255,255,0.08) 0%, transparent 40%);
    pointer-events: none;
  }

  .store-locator-hero__container {
    max-width: 900px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .store-locator-hero__heading {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif !important;
    font-size: clamp(42px, 7vw, 72px);
    font-weight: 500 !important;
    line-height: 1.05;
    color: #fff;
    margin: 0 0 20px;
    text-transform: none !important;
    letter-spacing: -0.01em;
    text-shadow: 0 2px 20px rgba(0,0,0,0.1);
  }

  .store-locator-hero__subheading {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif !important;
    font-size: clamp(16px, 2vw, 22px);
    font-weight: 400;
    line-height: 1.5;
    color: rgba(255, 255, 255, 0.95);
    margin: 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Mobile */
  @media (max-width: 768px) {
    .store-locator-hero {
      padding: 60px 20px;
    }

    .store-locator-hero__heading {
      font-size: 36px;
      margin-bottom: 14px;
    }

    .store-locator-hero__subheading {
      font-size: 15px;
    }
  }
</style>

{% schema %}
{
  "name": "Store Locator Hero",
  "tag": "section",
  "class": "store-locator-hero-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Find Strive Near You"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover where to buy Strive Soda at stores near you."
    }
  ],
  "presets": [
    {
      "name": "Store Locator Hero"
    }
  ]
}
{% endschema %}
