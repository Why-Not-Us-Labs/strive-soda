<section class="strive-hero-split">
  <div class="hero-img-side">
    {% if collection.image %}
      <img 
        src="{{ collection.image | image_url: width: 1200 }}" 
        alt="{{ collection.title }}"
        class="hero-img"
        loading="eager"
      >
    {% else %}
      <div class="hero-placeholder">
        <span class="placeholder-icon">ðŸ¥¤</span>
        <p class="placeholder-text">Upload collection image</p>
      </div>
    {% endif %}
  </div>
  
  <div class="hero-text-side">
    <div class="hero-text-inner">
      <h1 class="hero-title">{{ collection.title }}</h1>
      {%- if collection.description != empty -%}
        <p class="hero-desc">{{ collection.description }}</p>
      {%- else -%}
        <p class="hero-desc">Hydration soda for the movers, the shakers, and the tastemakers. Real ingredients, real hydration, real flavor.</p>
      {%- endif -%}
    </div>
  </div>
</section>

<style>
:root {
  --tiffany: #0ABAB5;
  --orange: #FF7A00;
  --cream: #F5F1E8;
}

.strive-hero-split {
  display: grid;
  grid-template-columns: 1fr;
  background: var(--cream);
  isolation: isolate;
}

.hero-img-side {
  width: 100%;
  height: 300px;
  overflow: hidden;
  background: linear-gradient(135deg, rgba(10,186,181,0.08), rgba(255,122,0,0.08));
}

.hero-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hero-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.placeholder-icon {
  font-size: 64px;
  opacity: 0.3;
}

.placeholder-text {
  font-size: 14px;
  font-weight: 600;
  color: #666;
  text-transform: uppercase;
  margin-top: 12px;
}

.hero-text-side {
  background: var(--tiffany);
  padding: 40px 20px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hero-text-inner {
  max-width: 600px;
}

.hero-title {
  font-size: clamp(40px, 8vw, 72px);
  font-weight: 900;
  line-height: 1;
  color: white;
  margin: 0 0 16px;
  text-transform: uppercase;
  letter-spacing: -0.02em;
}

.hero-desc {
  font-size: clamp(18px, 2vw, 22px);
  line-height: 1.5;
  color: rgba(255,255,255,0.95);
  margin: 0;
}

@media (min-width: 768px) {
  .strive-hero-split {
    grid-template-columns: 1fr 1fr;
    min-height: 500px;
  }
  
  .hero-img-side {
    height: auto;
  }
  
  .hero-text-side {
    padding: 60px 40px;
  }
}

@media (min-width: 1024px) {
  .hero-text-side {
    padding: 80px 60px;
  }
}
</style>

