  <div class="section-header-container">
    <h2 class="section-header-title">CHOOSE YOUR VIBE</h2>
  </div>
</section>

<!-- ==========================================
     SECTION 3: PRODUCT CAROUSEL
     Purpose: Display swipeable product cards
     ========================================== -->
<section class="strive-section strive-section--carousel">
  <div class="carousel-container">
    <div class="carousel-track">
      {% for product in collection.products %}
        <article class="carousel-card">
          <a href="{{ product.url }}" class="carousel-card-link">
            <div class="carousel-card-image-wrap">
              {% if product.featured_image %}
                {%- liquid
                  assign hover_image = ''
                  assign product_title_lower = product.title | downcase
                  
                  if product_title_lower contains 'peach'
                    assign hover_image = 'https://cdn.shopify.com/s/files/1/0878/4170/2180/files/spirited-hive-1760026323261.png?v=1760046311'
                  elsif product_title_lower contains 'tropical'
                    assign hover_image = 'https://cdn.shopify.com/s/files/1/0878/4170/2180/files/spirited-hive-1760029089693.png?v=1760046289'
                  elsif product_title_lower contains 'variety'
                    assign hover_image = 'https://cdn.shopify.com/s/files/1/0878/4170/2180/files/spirited-hive-1759985899211.png?v=1759985923'
                  endif
                  
                  assign primary_image_url = product.featured_image | image_url: width: 800
                  
                  if product_title_lower contains 'variety'
                    assign primary_image_url = 'https://cdn.shopify.com/s/files/1/0878/4170/2180/files/Screenshot_2025-10-10_at_11.07.15_PM.png?v=1760152053'
                  endif
                -%}
                
                <img 
                  src="{{ primary_image_url }}" 
                  alt="{{ product.title | escape }}"
                  loading="{% if forloop.index <= 3 %}eager{% else %}lazy{% endif %}"
                  class="carousel-card-image carousel-card-image-primary"
                >
                
                {% if hover_image != '' %}
                  <img 
                    src="{{ hover_image }}" 
                    alt="{{ product.title | escape }} - Styled"
                    loading="lazy"
                    class="carousel-card-image carousel-card-image-hover"
                  >
                {% endif %}
              {% endif %}
            </div>
            <div class="carousel-card-content">
              <h3 class="carousel-card-title">{{ product.title }}</h3>
              <p class="carousel-card-subtitle">Real hydration, real ingredients</p>
              <p class="carousel-card-price">{{ product.price | money }}</p>
            </div>
          </a>
          <button 
            class="carousel-card-button" 
            data-variant-id="{{ product.variants.first.id }}"
            type="button"
          >
            ADD TO CART
          </button>
        </article>
      {% endfor %}
    </div>
    
    <nav class="carousel-indicators" aria-label="Product navigation">
      {% for product in collection.products %}
        <button 
          class="carousel-indicator {% if forloop.index == 1 %}is-active{% endif %}" 
          data-index="{{ forloop.index0 }}"
          aria-label="Go to product {{ forloop.index }}"
        ></button>
      {% endfor %}
    </nav>
  </div>
</section>

