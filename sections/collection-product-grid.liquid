{%- paginate collection.products by section.settings.products_per_page -%}

<section class="strive-product-section">
  <div class="strive-container">
    
    <!-- Sort Bar -->
    <div class="strive-sort-bar">
      <span class="product-count">{{ collection.products_count }} Products</span>
      
      <div class="custom-select-wrapper">
        <button type="button" class="custom-select-trigger" aria-haspopup="listbox" aria-expanded="false">
          <span class="selected-value">Featured</span>
          <svg class="select-arrow" width="14" height="9" viewBox="0 0 14 9" fill="none">
            <path d="M1 1L7 7L13 1" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"/>
          </svg>
        </button>
        
        <ul class="custom-select-dropdown" role="listbox">
          <li class="select-option active" data-value="featured" role="option">
            <span>Featured</span>
            <svg width="16" height="12" viewBox="0 0 16 12" fill="none">
              <path d="M1 6L6 11L15 1" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"/>
            </svg>
          </li>
          <li class="select-option" data-value="price-ascending" role="option">
            <span>Price: Low to High</span>
            <svg width="16" height="12" viewBox="0 0 16 12" fill="none">
              <path d="M1 6L6 11L15 1" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"/>
            </svg>
          </li>
          <li class="select-option" data-value="price-descending" role="option">
            <span>Price: High to Low</span>
            <svg width="16" height="12" viewBox="0 0 16 12" fill="none">
              <path d="M1 6L6 11L15 1" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"/>
            </svg>
          </li>
        </ul>
      </div>
    </div>

    <!-- Product Grid - FIXED CSS -->
    <div class="strive-product-grid">
      {% for product in collection.products %}
        <article class="strive-product-card">
          <a href="{{ product.url }}" class="strive-product-link">
            <div class="strive-product-image">
              {% if product.featured_image %}
                <img 
                  src="{{ product.featured_image | image_url: width: 800 }}" 
                  alt="{{ product.title | escape }}"
                  loading="{% if forloop.index <= 3 %}eager{% else %}lazy{% endif %}"
                >
              {% endif %}
            </div>
            <div class="strive-product-info">
              <h3 class="strive-product-title">{{ product.title }}</h3>
              <p class="strive-product-subtitle">Real hydration, real ingredients</p>
              <p class="strive-product-price">{{ product.price | money }}</p>
            </div>
          </a>
          <button 
            class="strive-add-btn" 
            data-variant-id="{{ product.variants.first.id }}"
            type="button"
          >
            ADD TO CART
          </button>
        </article>
      {% endfor %}
    </div>

    {%- if paginate.pages > 1 -%}
      {%- render 'pagination', paginate: paginate -%}
    {%- endif -%}
    
  </div>
</section>

<style>
/* Reset any theme conflicts */
.strive-product-section * {
  box-sizing: border-box;
}

:root {
  --tiffany: #0ABAB5;
  --orange: #FF7A00;
  --cream: #F5F1E8;
}

.strive-product-section {
  background: white;
  padding: 40px 0 60px;
}

.strive-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 20px;
}

/* Sort Bar */
.strive-sort-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32px;
  padding-bottom: 20px;
  border-bottom: 2px solid #F0F0F0;
  flex-wrap: wrap;
  gap: 16px;
}

.product-count {
  font-size: 13px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 1.2px;
}

.custom-select-wrapper {
  position: relative;
  min-width: 220px;
}

.custom-select-trigger {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding: 12px 20px;
  background: white;
  border: 2px solid #E8E8E8;
  border-radius: 12px;
  font-size: 15px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}

.custom-select-trigger:hover {
  border-color: var(--tiffany);
  box-shadow: 0 4px 16px rgba(10,186,181,0.15);
}

.select-arrow {
  width: 14px;
  color: var(--tiffany);
  transition: transform 0.3s ease;
}

.custom-select-trigger[aria-expanded="true"] .select-arrow {
  transform: rotate(180deg);
}

.custom-select-dropdown {
  position: absolute;
  top: calc(100% + 8px);
  left: 0;
  right: 0;
  background: white;
  border: 2px solid var(--tiffany);
  border-radius: 12px;
  box-shadow: 0 12px 40px rgba(10,186,181,0.2);
  list-style: none;
  padding: 8px;
  margin: 0;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transform: translateY(-8px);
  transition: all 0.3s ease;
}

.custom-select-dropdown.active {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

.select-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 16px;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.2s ease;
}

.select-option:hover {
  background: rgba(10,186,181,0.08);
}

.select-option.active {
  background: var(--tiffany);
  color: white;
  font-weight: 700;
}

.select-option svg {
  width: 16px;
  opacity: 0;
}

.select-option.active svg {
  opacity: 1;
}

/* PRODUCT GRID - CRITICAL FIX */
.strive-product-grid {
  display: grid !important;
  grid-template-columns: repeat(1, 1fr) !important;
  gap: 40px !important;
  width: 100% !important;
}

@media (min-width: 768px) {
  .strive-product-grid {
    grid-template-columns: repeat(2, 1fr) !important;
    gap: 40px 32px !important;
  }
}

@media (min-width: 1024px) {
  .strive-product-grid {
    grid-template-columns: repeat(3, 1fr) !important;
    gap: 48px 40px !important;
  }
}

/* Product Card */
.strive-product-card {
  display: flex !important;
  flex-direction: column !important;
  background: white;
  width: 100% !important;
}

.strive-product-link {
  display: block;
  text-decoration: none;
  color: inherit;
  flex: 1;
}

.strive-product-image {
  position: relative;
  aspect-ratio: 3 / 4;
  background: var(--cream);
  border-radius: 12px;
  overflow: hidden;
  margin-bottom: 20px;
}

.strive-product-image img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.strive-product-info {
  text-align: center;
  margin-bottom: 16px;
}

.strive-product-title {
  font-size: 20px;
  font-weight: 800;
  margin: 0 0 8px;
  line-height: 1.2;
}

.strive-product-subtitle {
  font-size: 14px;
  color: #666;
  margin: 0 0 12px;
}

.strive-product-price {
  font-size: 18px;
  font-weight: 700;
  margin: 0;
}

.strive-add-btn {
  width: 100%;
  padding: 16px 32px;
  background: var(--orange);
  color: white;
  border: none;
  border-radius: 999px;
  font-size: 15px;
  font-weight: 800;
  letter-spacing: 1px;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 12px rgba(255,122,0,0.2);
}

.strive-add-btn:hover {
  background: var(--tiffany);
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(10,186,181,0.3);
}

@media (min-width: 768px) {
  .strive-container {
    padding: 0 40px;
  }
  
  .strive-product-section {
    padding: 60px 0 80px;
  }
}

@media (min-width: 1024px) {
  .strive-container {
    padding: 0 60px;
  }
  
  .strive-product-section {
    padding: 80px 0 100px;
  }
}
</style>

<script>
// Dropdown functionality
(function() {
  const trigger = document.querySelector('.custom-select-trigger');
  const dropdown = document.querySelector('.custom-select-dropdown');
  const options = document.querySelectorAll('.select-option');
  const selectedValue = document.querySelector('.selected-value');

  if (!trigger) return;

  trigger.addEventListener('click', function() {
    const isOpen = this.getAttribute('aria-expanded') === 'true';
    this.setAttribute('aria-expanded', !isOpen);
    dropdown.classList.toggle('active');
  });

  options.forEach(option => {
    option.addEventListener('click', function() {
      const value = this.dataset.value;
      const text = this.querySelector('span').textContent;
      
      selectedValue.textContent = text;
      options.forEach(opt => opt.classList.remove('active'));
      this.classList.add('active');
      
      trigger.setAttribute('aria-expanded', 'false');
      dropdown.classList.remove('active');
      
      window.location.href = `${window.location.pathname}?sort_by=${value}`;
    });
  });

  document.addEventListener('click', function(e) {
    if (!e.target.closest('.custom-select-wrapper')) {
      trigger.setAttribute('aria-expanded', 'false');
      dropdown.classList.remove('active');
    }
  });
})();

// Add to cart
document.querySelectorAll('.strive-add-btn').forEach(btn => {
  btn.addEventListener('click', function() {
    const variantId = this.dataset.variantId;
    const originalText = this.textContent;
    
    this.disabled = true;
    this.textContent = 'ADDING...';
    
    fetch('/cart/add.js', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ items: [{ id: variantId, quantity: 1 }] })
    })
    .then(r => r.json())
    .then(() => {
      this.textContent = 'ADDED!';
      this.style.background = 'var(--tiffany)';
      document.dispatchEvent(new CustomEvent('cart:refresh'));
      setTimeout(() => {
        this.textContent = originalText;
        this.style.background = '';
        this.disabled = false;
      }, 2000);
    })
    .catch(() => {
      this.textContent = 'ERROR';
      setTimeout(() => {
        this.textContent = originalText;
        this.disabled = false;
      }, 2000);
    });
  });
});
</script>

{%- endpaginate -%}

{% schema %}
{
  "name": "Collection Products",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "label": "Products per page",
      "min": 3,
      "max": 30,
      "step": 3,
      "default": 9
    }
  ]
}
{% endschema %}