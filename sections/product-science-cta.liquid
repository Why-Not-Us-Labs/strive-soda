{%- comment -%}
Product: Learn More CTA Section
- Drives traffic to science page
- Full-width CTA for product pages
- Tiffany Blue background
{%- endcomment -%}

<section class="product-science-cta-section">
  <div class="product-cta-container">
    <div class="cta-content">
      <span class="cta-eyebrow">{{ section.settings.eyebrow }}</span>
      <h2 class="cta-heading">{{ section.settings.heading }}</h2>
      <p class="cta-desc">{{ section.settings.description }}</p>
      <a href="{{ section.settings.cta_link }}" class="cta-button">
        {{ section.settings.cta_text }}
        <span class="button-arrow">â†’</span>
      </a>
    </div>
  </div>
</section>

<style>

:root {
  --tiffany-blue: #0ABAB5;
  --font-primary: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
}

.product-science-cta-section {
  padding: clamp(60px, 8vw, 100px) 0;
  background: var(--tiffany-blue);
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  color: #fff;
}

.product-cta-container {
  max-width: 1000px;
  margin: 0 auto;
  padding: 0 clamp(20px, 5vw, 60px);
}

.cta-content {
  text-align: center;
}

.cta-eyebrow {
  display: inline-block;
  padding: 6px 16px;
  background: #fff;
  color: var(--tiffany-blue);
  font-size: clamp(11px, 1.2vw, 13px);
  font-weight: 800;
  letter-spacing: 1px;
  text-transform: uppercase;
  margin-bottom: 20px;
  border-radius: 4px;
}

.cta-heading {
  font-size: clamp(32px, 4.5vw, 56px);
  font-weight: 900;
  line-height: 1.1;
  margin: 0 0 16px;
}

.cta-desc {
  font-size: clamp(16px, 1.8vw, 22px);
  line-height: 1.5;
  margin: 0 0 32px;
  opacity: 0.95;
}

.cta-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  padding: 18px 40px;
  background: #fff;
  color: var(--tiffany-blue);
  font-size: 16px;
  font-weight: 800;
  letter-spacing: 0.5px;
  text-transform: uppercase;
  text-decoration: none;
  border: 3px solid #fff;
  border-radius: var(--buttonRadius, 8px);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.cta-button:hover {
  background: transparent;
  color: #fff !important;
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(0,0,0,.2);
}

.button-arrow {
  font-size: 20px;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.cta-button:hover .button-arrow {
  transform: translateX(4px);
}

@media (max-width: 768px) {
  .cta-button {
    width: 100%;
    max-width: 300px;
  }
}
</style>

{% schema %}
{
  "name": "Product: Science CTA",
  "disabled_on": { "groups": ["header", "footer", "aside"] },
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text",
      "default": "LEARN MORE"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main heading",
      "default": "What is Hydration Soda?"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover the science behind Strive's essential electrolytes and organic honey sweetener."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button text",
      "default": "The Science Behind Strive"
    },
    {
      "type": "text",
      "id": "cta_link",
      "label": "Button link",
      "default": "/pages/science-behind-strive"
    }
  ],
  "presets": [
    {
      "name": "Product: Science CTA"
    }
  ]
}
{% endschema %}
